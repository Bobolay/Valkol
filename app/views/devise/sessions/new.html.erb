<style>
  .field{
      background: none;
      margin: 10px 0 0 0;
      border: none;
  }
</style>
<div class="row">
<div class="columns medium-8 large-8 small-centered">
<h2>Вхід в адмін-панель</h2>

<%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
  <div class="field">
    <%= f.email_field :email, autofocus: true, placeholder: "Електронна скринька" %>
  </div>

  <div class="field">
    <%= f.password_field :password, autocomplete: "off", placeholder: "Пароль" %>
  </div>

  <% if devise_mapping.rememberable? -%>
    <div class="field">
      <%= f.check_box :remember_me %>
      <%= f.label :remember_me, "Запам’ятати мене" %>
    </div>
  <% end -%>

  <div class="actions">
    <button type="submit" style="float: right">Увійти</button>
  </div>
<% end %>

<%# render "devise/shared/links" %>
</div>
</div>